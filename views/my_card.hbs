<div class="main-panel">
    <div class=" grid-margin stretch-card">
                <div class="card" >
                  <div class="card-body">
                    <h4 class="card-title">Buy and sell insurance</h4>
                    <p class="card-description">Your data is safe with us</p>
                    <form action="/update_card" method="post" class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputUsername1">Card Number</label>
                        <input type="number" name="card_number" class="form-control" id="exampleInputUsername1" value="{{card.number}}">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">RFC</label>
                        <input type="text" name="rfc" class="form-control" id="exampleInputEmail1" value="{{card.rfc}}">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Password<small>Para realizar transacciones seguras*</small></label>
                        <input type="password" name="password" class="form-control" id="exampleInputPassword1" value="{{card.password}}">
                      </div>  
                      <button type="submit" class="btn btn-primary mr-2">Update</button>
                      <a href="/"><button type="button" class="btn btn-dark">Cancel</button></a>
                    </form>
                  </div>
                </div>
              </div>
</div>